<% title [@project_cate.name, "inruby.com"].join(' - ') %>
<% meta_keywords ["成都红宝石信息技术网,网站建设，网站推广，网络营销，网页设计，企业信息化，微博营销，电子商务"].join(' - ') %>
<% meta_description ["成都红宝石信息技术具有多年互联网从业经验，为企业提供网站策划、网站开发、网站推广、网站运维一站式服务！"].join(' - ') %>

<% content_for :aside do %>
  <br/>
  <%= project_tags %>
<% end %>

<div class="list">
  <h3 class="titlbg"><%=@project_cate.name %></h3>

  <ul>
    <% @project_items.each_with_index do |item, index| %>
      <li>
        <h3 class="titbg" ><span class="title_ico">&nbsp;</span><%=link_to item.title, project_item_path(item)%></h3>
        <p><%=  strip_tags(item.content).to_s.gsub(/[ ]+|\s+|\t+|\n+|&[#0-9a-z]+;/, '').truncate(200)%>
        <strong><%=link_to '[阅读详情]↓', project_item_path(item)%></strong> <%=item.updated_at.strftime('%Y-%m-%d %H:%M:%S').to_s unless item.updated_at.blank? %></p>
      </li>
    <% end %>
  </ul
  <div class="tags"><%= will_paginate @project_items, :next_label => "下一页", :prev_label => "上一页" %></div>
</div>
