<% meta_keywords ["企业信息化咨询，成都红宝石企业网络策划"].join(' - ') %>
<% meta_description ["成都红宝石企业网站建设专家，开发团队具有多年互联网从业经验，团队为企业提供策划、开发、推广、运维一站式服务！联系电话：15928661802"].join(' - ') %>

<div class="list">
  <h3 class="titlbg"><%=@news_cate.name %></h3>
  <ul>
    <% @news_items.each_with_index do |item, index| %>
      <li>
        <h3><span class="title_ico">&nbsp;</span><%=link_to item.title.to_s.truncate(30), news_item_path(item)%></h3>

        <div class="summary">
          <% unless item.image_path.blank? && item.image_url.blank? %>
            <% image_path = item.image_path.blank? ? item.image_url : item.image_path %>
            <%= image_tag image_path, :class => 'img_left', :width => '100' %>
          <% end %>

          <%=  item.summary.blank? ? strip_tags(item.body).to_s.gsub(/[ ]+|\s+|\t+|\n+/, '').truncate(200) : strip_tags(item.summary)%>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<div class="tags"><%= will_paginate @news_items, :next_label => '下一页', :prev_label => '上一页' %></div>
