<div class="list">
  <h3 class="titlbg"><%=@news_cate.name %></h3>
  <ul>
    <% @news_items.each_with_index do |item, index| %>
      <li>
        <h3 class="titbg" ><span class="title_ico">&nbsp;</span><%=link_to item.title.to_s.truncate(30), news_item_path(item)%></h3>
        <p class="summary"><%=  item.summary || strip_tags(item.body).to_s.gsub(/[ ]+|\s+|\t+|\n+/, '').truncate(200)%>
        <span><%=link_to '阅读详情>>>', news_item_path(item), :target => "_blank"%></span> </p>
      </li>
    <% end %>
  </ul>
</div>

<div class="tags"><%= will_paginate @news_items, :next_label => '下一页', :prev_label => '上一页' %></div>
