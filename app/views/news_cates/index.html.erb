<% title ["互联网观察", "成都红宝石网络，您身边的企业信息化解决专家"].join(' - ') %>
<% meta_keywords ["企业信息化咨询，成都红宝石企业网络策划"].join(' - ') %>
<% meta_description ["成都红宝石企业网站建设专家，开发团队具有多年互联网从业经验，团队为企业提供策划、开发、推广、运维一站式服务！联系电话：15928661802"].join(' - ') %>

<div class="list">
  <ul>
    <% @news_items.each_with_index do |item, index| %>
      <li>
        <h3 class="titbg" ><span class="title_ico">&nbsp;</span><%=link_to item.title, news_item_path(item)%></h3>
        <p class="summary"><%=  item.summary || strip_tags(item.body).to_s.gsub(/[ ]+|\s+|\t+|\n+/, '').truncate(200)%>
        <span><%=link_to '阅读详情>>>', news_item_path(item), :target => "_blank"%></span> </p>
      </li>
    <% end %>
  </ul>
  <%= will_paginate @news_items, :next_label => "下一页", :prev_label => "上一页" %>
</div>
